@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Zmiana tekstu</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <style>
        .text-wrapper {
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            max-width: 50%;
            margin: auto;
        }

        .text-container {
            background-color: #919090;
            border-radius: 10px;
            padding: 20px;
            min-height: 50vh;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: opacity 0.2s ease-in-out;
            text-align: center;
            width: 100%;
        }

        .hidden {
            opacity: 0;
        }

        p {
            font-size: 20px;
            margin: 0;
        }

        .nav-button {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background: rgba(0, 0, 0, 0.5);
            border: none;
            color: white;
            border-radius:4px;
            padding: 10px 15px;
            font-size: 25px;
            cursor: pointer;
        }

            .nav-button:hover {
                background: rgba(0, 0, 0, 0.8);
            }

        .prev {
            left: -50px;
            margin-left: -20px;
        }

        .next {
            right: -50px;
            margin-right: -20px;
        }
    </style>
</head>
<body>

    <div class="container text-center mt-5">
        <div class="text-wrapper">
            <button id="prevBtn" class="nav-button prev d-none" onclick="changeText(-1)">
                <i class="bi bi-arrow-left"></i>
            </button>

            <div id="text-container" class="text-container">
                <p id="text">
                    ExpensesApp is a comprehensive financial management tool designed to help individuals and businesses track their expenses with ease.
                </p>
            </div>

            <button id="nextBtn" class="nav-button next" onclick="changeText(1)">
                <i class="bi bi-arrow-right"></i>
            </button>
        </div>
    </div>

    <script>
        let texts = [
            "ExpensesApp is a comprehensive financial management tool designed to help individuals and businesses track their expenses with ease.",
            "Oto drugi tekst informacyjny dotyczący ExpensesApp.",
            "Dzięki ExpensesApp możesz łatwo analizować swoje wydatki i oszczędzać pieniądze!"
        ];
        let index = 0;

        function changeText(direction) {
            let textContainer = document.getElementById("text-container");
            textContainer.classList.add("hidden"); // Efekt zanikania

            setTimeout(() => {
                index = (index + direction + texts.length) % texts.length;
                document.getElementById("text").innerText = texts[index];
                textContainer.classList.remove("hidden"); // Pokazujemy nowy tekst

                // Smooth scroll
                textContainer.scrollIntoView({ behavior: "smooth", block: "center" });

                // Pokazywanie/ukrywanie strzałek
                document.getElementById("prevBtn").classList.toggle("d-none", index === 0);
                document.getElementById("nextBtn").classList.toggle("d-none", index === texts.length - 1);
            }, 200); // Krótka animacja przed zmianą tekstu
        }
    </script>

</body>
</html>
