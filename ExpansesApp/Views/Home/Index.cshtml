@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Zmiana tekstu</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css">
    
</head>
<body>

    <div class="container text-center mt-5">
    <h1>Welcome in Expenses App</h1>
    <p>You deciding what are you doing with your money</p>
        <div class="text-wrapper">
            <button id="prevBtn" class="nav-button prev d-none" onclick="changeText(-1)">
                <i class="bi bi-arrow-left"></i>
            </button>

            <div id="text-container" class="text-container">
                <p id="text">
                    ExpensesApp is a comprehensive financial management tool designed to help individuals and businesses track their expenses with ease.
                </p>
            </div>

            <button id="nextBtn" class="nav-button next" onclick="changeText(1)">
                <i class="bi bi-arrow-right"></i>
            </button>
        </div>
    
    </div>
            <div class="justify-content-center">
                    <div class="container-xl">
                        <p>Open Acoount and have fun and manegment your money just now</p>
                    </div>
            </div>

    <script>
        let texts = [
            "ExpensesApp is a comprehensive financial management tool designed to help individuals and businesses track their expenses with ease.",
            "Oto drugi tekst informacyjny dotyczący ExpensesApp.",
            "With ExpensesApp you can easily analyze your expenses and save money!"
        ];
        let index = 0;

        function changeText(direction) {
            let textContainer = document.getElementById("text-container");
            textContainer.classList.add("hidden"); 

            setTimeout(() => {
                index = (index + direction + texts.length) % texts.length;
                document.getElementById("text").innerText = texts[index];
                textContainer.classList.remove("hidden"); 

                textContainer.scrollIntoView({ behavior: "smooth", block: "center" });

                document.getElementById("prevBtn").classList.toggle("d-none", index === 0);
                document.getElementById("nextBtn").classList.toggle("d-none", index === texts.length - 1);
            }, 200); 
        }
    </script>

</body>
</html>
