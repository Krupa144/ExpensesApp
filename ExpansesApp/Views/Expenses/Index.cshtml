@model IEnumerable<ExpensesApp.Models.Expenses>

<h2>Wydatki</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nazwa</th>
            <th>Opis</th>
            <th>Cena</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var expense in Model)
        {
            <tr>
                <td>@expense.Name</td>
                <td>@expense.Description</td>
                <td>@expense.Price</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = expense.ID })" class="btn btn-warning">Edytuj</a>
                    <a href="@Url.Action("Delete", new { id = expense.ID })" class="btn btn-danger">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-primary">Dodaj wydatek</a>
